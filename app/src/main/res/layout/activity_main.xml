<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="346dp"
        android:layout_height="133dp"
        android:layout_above="@+id/nums"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="-8dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="35dp"
        android:text="0"
        android:textAlignment="textEnd"

        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/nums"
        android:layout_width="7dp"
        android:layout_height="450dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/num_c"
                style="@style/Button2"
                android:layout_width="75dp"
                android:text="C" />

            <Button
                android:id="@+id/num_7"
                style="@style/Button3"
                android:text="7" />

            <Button
                android:id="@+id/num_4"
                style="@style/Button3"
                android:text="4" />

            <Button
                android:id="@+id/num_1"
                style="@style/Button3"
                android:text="1" />

            <Button
                android:id="@+id/num_ac"
                style="@style/Button2"
                android:text="AC" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/num_plus_and_munys"
                style="@style/Button2"
                android:text="+/-" />

            <Button
                android:id="@+id/num_8"
                style="@style/Button3"
                android:text="8" />

            <Button
                android:id="@+id/num_5"
                style="@style/Button3"
                android:text="5" />

            <Button
                android:id="@+id/num_2"
                style="@style/Button3"
                android:text="2" />

            <Button
                android:id="@+id/num_0"
                style="@style/Button3"
                android:text="0" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/num_vidsotky"
                style="@style/Button2"
                android:text="%" />

            <Button
                android:id="@+id/num_9"
                style="@style/Button3"
                android:text="9" />

            <Button
                android:id="@+id/num_6"
                style="@style/Button3"
                android:text="6" />

            <Button
                android:id="@+id/num_3"
                style="@style/Button3"
                android:text="3" />

            <Button
                android:id="@+id/num_krapka"
                style="@style/Button2"
                android:text="." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/num_dilenya"
                style="@style/Button1"
                android:text="/" />

            <Button
                android:id="@+id/num_mno"
                style="@style/Button1"
                android:text="*" />

            <Button
                android:id="@+id/num_munus"
                style="@style/Button1"
                android:text="-" />

            <Button
                android:id="@+id/num_plus"
                style="@style/Button1"
                android:text="+" />

            <Button
                android:id="@+id/num_doriv"
                style="@style/Button1"
                android:text="=" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>