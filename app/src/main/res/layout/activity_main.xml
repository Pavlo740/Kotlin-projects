<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:padding="20dp">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:textSize="64dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:paddingHorizontal="15dp"
        android:paddingVertical="35dp"
        android:layout_above="@+id/nums"

         />

    <LinearLayout
        android:id="@+id/nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/num_c"
                style="@style/Button2"
                android:layout_width="wrap_content"
                android:text="C" />
            <Button
                android:id="@+id/num_7"
                android:text="7"
                style="@style/Button3"/>
            <Button
                android:id="@+id/num_4"
                android:text="4"
                style="@style/Button3"/>
            <Button
                android:id="@+id/num_1"
                android:text="1"
                style="@style/Button3"/>
            <Button
                android:id="@+id/num_ac"
                android:text="AC"
                style="@style/Button2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/num_plus_and_munys"
                android:text="+/-"
                style="@style/Button2" />

            <Button
                android:id="@+id/num_8"
                android:text="8"
                style="@style/Button3" />

            <Button
                android:id="@+id/num_5"
                android:text="5"
                style="@style/Button3" />

            <Button
                android:id="@+id/num_2"
                android:text="2"
                style="@style/Button3" />

            <Button
                android:id="@+id/num_0"
                android:text="0"
                style="@style/Button3" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/num_vidsotky"
                android:text="%"
                style="@style/Button2"/>
            <Button
                android:id="@+id/num_9"
                android:text="9"
                style="@style/Button3"/>
            <Button
                android:id="@+id/num_6"
                android:text="6"
                style="@style/Button3"/>
            <Button
                android:id="@+id/num_3"
                android:text="3"
                style="@style/Button3"/>
            <Button
                android:id="@+id/num_krapka"
                android:text="."
                style="@style/Button2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/num_dilenya"
                android:text="/"
                style="@style/Button1"/>
            <Button
                android:id="@+id/num_mno"
                android:text="*"
                style="@style/Button1"/>
            <Button
                android:id="@+id/num_munus"
                android:text="-"
                style="@style/Button1"/>
            <Button
                android:id="@+id/num_plus"
                android:text="+"
                style="@style/Button1"/>
            <Button
                android:id="@+id/num_doriv"
                android:text="="
                style="@style/Button1"/>

        </LinearLayout>


        
        
        
    </LinearLayout>
        
      



</RelativeLayout>