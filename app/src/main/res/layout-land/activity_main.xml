<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:padding="20dp"
    tools:ignore="MissingDefaultResource">


    <TextView
        android:id="@+id/screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="151dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="209dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/nums"
        android:layout_width="499dp"
        android:layout_height="249dp"
        android:layout_below="@id/screen"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="149dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="117dp"
        android:columnCount="7"
        android:rowCount="4">


        <!-- 1st row -->
        <Button
            android:id="@+id/num_c"
            style="@style/Button2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="C" />

        <Button
            android:id="@+id/num_7"
            style="@style/Button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="7" />

        <Button
            android:id="@+id/num_4"
            style="@style/Button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="2"
            android:text="4" />

        <Button
            android:id="@+id/num_1"
            style="@style/Button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="3"
            android:text="1" />

        <!-- 2nd row -->
        <Button
            android:id="@+id/num_plus_and_munys"
            style="@style/Button2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="4"
            android:text="+/-" />

        <Button
            android:id="@+id/num_ac"
            style="@style/Button2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="AC" />

        <Button
            android:id="@+id/num_8"
            style="@style/Button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="8" />

        <Button
            android:id="@+id/num_5"
            style="@style/Button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="2"
            android:text="5" />

        <Button
            android:id="@+id/num_2"
            style="@style/Button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="3"
            android:text="2" />

        <Button
            android:id="@+id/num_0"
            style="@style/Button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="4"
            android:text="0" />


        <!-- 3rd row -->
        <Button
            android:id="@+id/num_vidsotky"
            style="@style/Button2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="%" />

        <Button
            android:id="@+id/num_9"
            style="@style/Button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="1"
            android:text="9" />

        <Button
            android:id="@+id/num_6"
            style="@style/Button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="2"
            android:text="6" />

        <Button
            android:id="@+id/num_3"
            style="@style/Button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="3"
            android:text="3" />

        <Button
            android:id="@+id/num_krapka"
            style="@style/Button2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="4"
            android:text="." />


        <!-- 4th row -->
        <Button
            android:id="@+id/num_dilenya"
            style="@style/Button1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="5"
            android:text="/" />

        <Button
            android:id="@+id/num_mno"
            style="@style/Button1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="5"
            android:text="*" />

        <Button
            android:id="@+id/num_munus"
            style="@style/Button1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="6"
            android:text="-" />

        <Button
            android:id="@+id/num_plus"
            style="@style/Button1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="6"
            android:text="+" />

        <Button
            android:id="@+id/num_doriv"
            style="@style/Button1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="5"
            android:text="=" />

    </GridLayout>

</RelativeLayout>
